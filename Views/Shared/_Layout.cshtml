<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>@ViewData["Title"] - PortfolioSite</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css"/>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true"/>
    <link rel="stylesheet" href="~/PortfolioSite.styles.css" asp-append-version="true"/>
</head>
<body>
    <!-- Custom Sticky Navbar -->
    <nav class="nav-bar">
      <div class="nav-container">
        <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">PortfolioSite</a>
            <ul class="nav-links">
                <li><a href="/">Home</a></li>
                <li><a href="/Home/Projects">Projects</a></li>
                <li><a href="/Home/Contact">Contact</a></li>
            </ul>
        </div>
    </nav>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container footer-content">
            <span>&copy; 2025 - PortfolioSite - </span> 
            <a asp-area="" asp-controller="Home" asp-action="Privacy" style="color: White;">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)

    <script>
        function filterProjects(category) {
            const cards = document.querySelectorAll('.project-card');
            const tags = document.querySelectorAll('.tag');

            tags.forEach(tag => tag.classList.remove('active'));
            event.target.classList.add('active');

            cards.forEach(card => {
                const isMatch = card.dataset.category === category || category === 'all';
                card.style.display = isMatch ? 'block' : 'none';
            });
        }
    </script>
</body>
</html>
