<!-- Overlay for expanded card -->
<div class="overlay" id="overlay">
  <div class="expanded-card" id="expandedCard">
    <button class="close-btn" onclick="closeCard()">✖</button>
    <h3 id="expandedTitle"></h3>
    <p id="expandedContent"></p>
    <a id="viewMoreBtn" href="https://github.com" target="_blank" class="view-more-btn">View More →</a>
  </div>
</div>

<script>
  function expandCard(title, content) {
    document.getElementById("expandedTitle").textContent = title;
    document.getElementById("expandedContent").textContent = content;
    document.getElementById("overlay").style.display = "flex";
  }

  function closeCard() {
    document.getElementById("overlay").style.display = "none";
  }

  function expandCard(element) {
  const title = element.dataset.title;
  const content = element.dataset.content.trim().replace(/\n\s+/g, '\n');

  document.getElementById("expandedTitle").textContent = title;
  document.getElementById("expandedContent").textContent = content;
  document.getElementById("overlay").style.display = "flex";

  const viewMoreBtn = document.getElementById("viewMoreBtn");
  const viewLink = element.dataset.link || "#"; // default to "#"
  viewMoreBtn.href = viewLink;
}
</script>
